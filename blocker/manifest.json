{

  "manifest_version": 2,
  "name": "Blocker",
  "version": "1.1",

  "description": "Blocker",
  "icons": {
    "48": "icons/blocker-48.png"
  },

  "permissions": [
    "storage"
  ],

  "browser_action": {
    "default_icon": {
     "32" : "icons/blocker-32.png"
    },
